<p id="notice"><%= notice %></p>

<h1>Songs</h1>
<%= form_tag(songs_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Songs" %>
  <%= submit_tag "Search", :name => nil %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Album</th>
      <th>Artist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.name %></td>
        <td><%= link_to Album.find(song.album_id).name, Album.find(song.album_id) %></td>
        <td><%= link_to Artist.find(song.artist_id).name, Artist.find(song.artist_id) %></td>
        <td><%= link_to 'Show', song %></td>
        <% if user_signed_in? && current_user.admin? %>
          <td><%= link_to 'Edit', edit_song_path(song) %></td>
          <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if @songs.size == 0 %>
  <em>No songs yet</em>
  <br>
<% end %>
<br>
<% if user_signed_in? %>
  <%= link_to 'New Song', new_song_path %>
<% end %>
