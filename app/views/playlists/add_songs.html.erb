<div class="row">
    <div class="6u 12u$(xsmall)">
        <h4>Add Songs</h4>
        <ul class="alt">
            <%= form_tag(songs_path, :method => "get", id: "search-form") do %>
              <p>
                  <%= text_field_tag :search, params[:search], placeholder: "Search Songs" %>
                  <%= submit_tag "Search", :name => nil %>
              </p>
            <% end %>
            <table>
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Album</th>
                  <th>Artist</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @songs.each do |song| %>
                  <tr>
                    <td><%= song.name %></td>
                    <td><%= song.album.name %></td>
                    <td><%= song.artist.name %></td>
                    <td>
                        <p class="button alt small">
                        <%= link_to 'Add', playlist_path(:id => @playlist.id, :song_id => song.id) %>
                        </p>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>

            <% if @songs.size == 0 %>
              <em>No songs yet</em>
            <% end %>
        </ul>
    </div>
</div>
