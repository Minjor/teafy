<p id="notice"><%= notice %></p>

<h1>In Playlists</h1>

<table>
  <thead>
    <tr>
      <th>Song</th>
      <th>Playlist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @in_playlists.each do |in_playlist| %>
      <tr>
        <td><%= in_playlist.song_id %></td>
        <td><%= in_playlist.playlist_id %></td>
        <td><%= link_to 'Show', in_playlist %></td>
        <td><%= link_to 'Edit', edit_in_playlist_path(in_playlist) %></td>
        <td><%= link_to 'Destroy', in_playlist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

