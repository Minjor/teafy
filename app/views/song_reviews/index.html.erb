<p id="notice"><%= notice %></p>

<h1>Song Reviews</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Song</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @song_reviews.each do |song_review| %>
      <tr>
        <td><%= song_review.user_id %></td>
        <td><%= song_review.song_id %></td>
        <td><%= song_review.review %></td>
        <td><%= link_to 'Show', song_review %></td>
        <td><%= link_to 'Edit', edit_song_review_path(song_review) %></td>
        <td><%= link_to 'Destroy', song_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Song Review', new_song_review_path %>
