<p id="notice"><%= notice %></p>

<h1>Artists</h1>
<%= form_tag(artists_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Artists" %>
  <%= submit_tag "Search", :name => nil %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Genres</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <% param1 = params[artist.id] %>
        <td><%= artist.name %></td>
        <td><%= link_to 'Genres', genres_path(:artist_id => artist.id) %></td>
        <td><%= link_to 'Show', artist %></td>
        <% if user_signed_in? && current_user.admin? %>
          <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
          <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<% if @artists.size == 0 %>
  <em>No artists yet</em>
  <br>
<% end %>
<br>
<%= link_to 'Home', homepage_path %>
&emsp;
<% if user_signed_in? %>
  <%= link_to 'New Artist', new_artist_path %>
<% end %>
