<p id="notice"><%= notice %></p>

<h1>Albums</h1>
<%= form_tag(albums_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Albums" %>
  <%= submit_tag "Search", :name => nil %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Artist</th>
      <th>Genres</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.name %></td>
        <td><%= link_to Artist.find(album.artist_id).name, Artist.find(album.artist_id) %></td>
        <td><%= link_to 'Genres', genres_path(:album_id => album.id) %></td>
        <td><%= link_to 'Show', album %></td>
        <% if user_signed_in? && current_user.admin? %>
          <td><%= link_to 'Edit', edit_album_path(album) %></td>
          <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<% if @albums.size == 0 %>
  <em>No albums yet</em>
  <br>
<% end %>
<br>
<%= link_to 'Home', homepage_path %>
&emsp;
<% if user_signed_in? %>
  <%= link_to 'New Album', new_album_path %>
<% end %>
