<p id="notice"><%= notice %></p>

<h1>Playlist Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Playlist</th>
      <th>User</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @playlist_reviews.each do |playlist_review| %>
      <tr>
        <td><%= playlist_review.playlist_id %></td>
        <td><%= playlist_review.user_id %></td>
        <td><%= playlist_review.review %></td>
        <td><%= link_to 'Show', playlist_review %></td>
        <td><%= link_to 'Edit', edit_playlist_review_path(playlist_review) %></td>
        <td><%= link_to 'Destroy', playlist_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Playlist Review', new_playlist_review_path %>
